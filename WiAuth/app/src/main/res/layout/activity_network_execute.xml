<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hackerchai.wiauth.networkExecute">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Broadcast"
        android:id="@+id/broadcast"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get PairKey"
        android:id="@+id/pair"
        android:layout_alignTop="@+id/broadcast"
        android:layout_toRightOf="@+id/broadcast"
        android:layout_toEndOf="@+id/broadcast"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satrt TCP"
        android:id="@+id/startTcp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/broadcast"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
